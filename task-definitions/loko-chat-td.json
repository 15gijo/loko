{
  "family": "loko-chat-td",
  "containerDefinitions": [
    {
      "name": "loko-chat",
      "image": "REPLACEME_IMAGE",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "name": "http",
          "containerPort": 19097,
          "hostPort": 19097,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "secrets": [
        {
          "name": "SPRING_DATASOURCE_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko-feed/SPRING_DATASOURCE_URL"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko-feed/SPRING_DATASOURCE_USERNAME"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko-feed/SPRING_DATASOURCE_PASSWORD"
        },
        {
          "name": "REDIS_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko-feed/REDIS_PASSWORD"
        },
        {
          "name": "EC2_MIDDLEWARE_IP",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko-feed/EC2_MIDDLEWARE_IP"
        },
        {
          "name": "ACTIVE_PROFILE",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko/ACTIVE_PROFILE"
        },
        {
          "name": "EUREKA_HOST",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko/EUREKA_HOST"
        },
        {
          "name": "MONGO_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko-chat/MONGO_URL"
        },
        {
          "name": "SLACK_WEBHOOK_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko/SLACK_WEBHOOK_URL"
        },
        {
          "name": "AI_SERVICE_URL",
          "valueFrom": "arn:aws:ssm:ap-northeast-2:408891294463:parameter/config/loko/AI_SERVICE_URL"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/loko-chat-td",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::408891294463:role/loko-task-role",
  "taskRoleArn": "arn:aws:iam::408891294463:role/loko-task-role"
}
